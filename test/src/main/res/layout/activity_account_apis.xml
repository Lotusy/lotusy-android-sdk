<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lotusy.android.sdk.test.AccountApis">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Register User"
        android:id="@+id/register"
        android:background="#ff008080"
        android:height="60dp"
        android:onClick="onRegisterClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Login User"
        android:id="@+id/login"
        android:background="#ff008080"
        android:height="60dp"
        android:onClick="onLoginClick"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/register"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Get Profile"
        android:id="@+id/current"
        android:background="#ff008080"
        android:height="60dp"
        android:onClick="onCurrentClick"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Get User Profile"
        android:id="@+id/profile"
        android:background="#ff008080"
        android:height="60dp"
        android:onClick="onGetProfileClick"
        android:layout_below="@+id/current"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Update  User"
        android:id="@+id/update"
        android:background="#ff008080"
        android:height="60dp"
        android:onClick="onUpdateClick"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/profile"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
